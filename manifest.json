{
  "name": "Listed Company Info",
  "version": "0.9.0",
  "manifest_version": 3,
  "description": "Display Company Infomation on four digits Ticker",
  "action": {
    "default_icon": "./icon/icon_512.png",
    "default_title": "Quote Info",
    "__default_popup": "popup.html"
  },
  "permissions": [
    "storage", "scripting"
  ], 
  "background": {
    "__persistent": true,
    "service_worker": "background.js"
  },
  "host_permissions": [
  "*://*/*",
  "file:///*/*"
  ],
  "icons": {
    "48": "./icon/icon_512.png",
    "128": "./icon/icon_512.png"
  }
}
