{
  "name": "銘柄情報ポップアップ",
  "version": "0.9.1",
  "manifest_version": 3,
  "description": "東証銘柄の会社情報を瞬時に表示",
  "action": {
    "default_icon": "./icon/icon_512.png",
    "default_title": "銘柄情報ポップアップ",
    "__default_popup": "popup.html"
  },
  "permissions": [
    "storage", "scripting"
  ], 
  "background": {
    "__persistent": true,
    "service_worker": "background.js"
  },
  "host_permissions": [
  "*://*/*",
  "file:///*/*"
  ],
  "icons": {
    "48": "./icon/icon_512.png",
    "128": "./icon/icon_512.png"
  }
}
